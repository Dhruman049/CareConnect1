<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Reports</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <% if (!role) { %>
        <%- include('home-navbar') %>
            <% } else { %>
                <%- include(role === 'Admin' ? 'admin-navbar' : 'specialist-navbar') %>
                    <% } %>


    <div class="view-report-container">
        <h1>View Reports</h1>
        <table class="reports-table">
            <thead>
                <tr>
                    <th>Patient Name</th>
                    <th>Number of Reports</th>
                </tr>
            </thead>
            <tbody>
                <% patients.forEach(patient => { %>
                    <tr>
                        <td><%= patient.name %></td>
                        <td><%= patient.reportCount %></td>
                        
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <%- include('footer') %>
</body>
</html>