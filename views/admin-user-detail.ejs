<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>User Details</title>
</head>
<body>
    <% if (!role) { %>
        <%- include('home-navbar') %>
    <% } else { %> 
        <%- include(role==='Admin' ? 'admin-navbar' : role==='Specialist' ? 'specialist-navbar' : 'patient-navbar' ) %>
        <% } %>
    <div class="userdetail-container">
        <h1>User Details</h1>
        <table class="user-details-table">
            <tbody>
                <tr>
                    <th>First Name</th>
                    <td><%= user.user_FirstName %></td>
                </tr>
                <tr>
                    <th>Last Name</th>
                    <td><%= user.user_LastName %></td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td><%= user.user_Email %></td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td><%= user.user_Address %></td>
                </tr>
                <tr>
                    <th>Phone No</th>
                    <td><%= user.user_PhoneNo %></td>
                </tr>
                <tr>
                    <th>Date of Birth</th>
                    <td><%= user.user_DOB.toLocaleDateString() %></td>
                </tr>
                <tr>
                    <th>Role</th>
                    <td><%= user.user_Role %></td>
                </tr>
                <tr>
                    <th>Specialist Type</th>
                    <td><%= user.user_SpecialistType %></td>
                </tr>
            </tbody>
        </table>
        <a href="/admin/users" class="btn btn-secondary">Back to Users</a>
    </div>
    <%- include('footer') %>
</body>
</html>